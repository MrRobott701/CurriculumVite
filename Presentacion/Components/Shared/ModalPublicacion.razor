                    <!-- Tipo de PublicaciÃ³n -->
                    <div class="mb-3">
                        <label for="tipoPublicacion" class="form-label">Tipo de PublicaciÃ³n *</label>
                        <InputSelect id="tipoPublicacion" class="form-select" @bind-Value="PublicacionActual.TipoPublicacion">
                            <option value="">Seleccione un tipo</option>
                            <option value="ArtÃ­culo de Revista">ArtÃ­culo de Revista</option>
