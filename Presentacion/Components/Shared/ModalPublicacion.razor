                        <label for="titulo" class="form-label">TÃ­tulo *</label>
                        <InputText id="titulo" class="form-control" @bind-Value="PublicacionActual.Titulo" />
                        <ValidationMessage For="@(() => PublicacionActual.Titulo)" />
